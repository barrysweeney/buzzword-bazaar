extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div
      label(for='name') Name:
      br
      input(type='text', placeholder='Big Data, Serverless etc' name='name' value=(undefined===category ? '' : category.name) required="true")
    div
      label(for='description') Description:
      br
      textarea(type='textarea', placeholder='Description' name='description' value=(undefined===category ? '' : category.description) required="true")
    br
    button(type='submit') Submit

  if errors 
   ul
    for error in errors
     li!= error.msg