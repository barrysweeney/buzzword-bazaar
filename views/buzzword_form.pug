extends layout

block content
  h1= title
  if passwordRequired
    form(method='POST' action='' enctype="multipart/form-data")
      div 
        label(for='name') Name:
        br
        input(type='text', placeholder='Name of buzzword' name='name' required='true' value=(undefined===buzzword ? '' : buzzword.name) )
        br
      div 
        label(for='description') Description:
        br
        textarea(type='textarea', placeholder='Description' name='description' rows='3' required='true') #{undefined===buzzword ? '' : buzzword.description}
      div 
        label(for='price') Price:
        br
        input(type='number', placeholder='100' name='price' value=(undefined===buzzword ? '' : buzzword.price) required='true') 
        br
      div 
        label(for='price') Number in stock:
        br
        input(type='number', placeholder='10' name='numberInStock' value=(undefined===buzzword ? '' : buzzword.numberInStock) required='true') 
      div 
        label Category:
        div
          for category in categories
            div(style='display: inline; padding-right:10px;')
              input(type='checkbox', name='category', id=category._id, value=category._id, checked=category.checked )
              label(for=category._id) #{category.name}
      br
      div 
        label(for='img') Image:
        br
        input(type='file',  name='img')
      br
      div
        label(for='password') Password:
        br
        input(type='password',  name='password')
      br
      button(type='submit') Submit
  else
