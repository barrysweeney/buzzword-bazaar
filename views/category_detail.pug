extends layout

block content

  h1 Category: #{category.name}
  
  div(style='margin-left:20px;margin-top:20px')

    h4 Buzzwords
    
    dl
      each buzzword in category_buzzwords
        dt 
          a(href=buzzword.url) #{buzzword.name}
        dd #{buzzword.description}

      else
        p This category has no buzzwords

    hr
    p
      a(href=category.url+'/delete') Delete category
    p
      a(href=category.url+'/update') Update category
        